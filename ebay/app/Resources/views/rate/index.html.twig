{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rates list</h1>
<div class="container">
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>user</th>
                <th>Rate User</th>
                <th>User comment</th>
                <th>Product</th>
                <th>Rate Product</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rate in rates %}
            <tr>
                <td>{{ rate.user }}</td>
                <td>{{ rate.rateuser }}</td>
                <td>{{ rate.commentuser }}</td>
                <th>{{ rate.product }}</th>
                <td>{{ rate.rate }}</td>
                <td>{{ rate.comment }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rate_show', { 'id': rate.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rate_edit', { 'id': rate.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>
{% endblock %}
