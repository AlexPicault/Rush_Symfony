{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

<div class="container">
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Average Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if app.user.id != user.id %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                {% if user.averageRate == 0 %}
                <td>No rate</td>
                {% else %}
                <td>{{ user.averageRate }}</td>
                {% endif %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'user': user.id }) }}">show</a>
                    </ul>
                </td>
            </tr>
        {% endif %}
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>
{% endblock %}
